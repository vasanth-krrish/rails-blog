<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <nav class="level">
      <!-- Left Side -->
      <div class="level-left">
        <p class="level-item">
          <em>Posted <%= time_ago_in_words(@post.created_at) %> ago by <strong><%= @post.user.username.downcase %></strong></em>
        </p>
      </div>
      <!-- Right Side -->
      <% if @post.user == current_user || user_signed_in? && current_user.has_role?(:admin) %>
        <div class="level-right">
          <p class="level-item">
            <%= link_to "Edit", edit_post_path(@post), class: "button" %>
          </p>
          <p class="level-item">
            <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class: "button is-danger" %>
          </p>
        </div>
      <% end %>
    </nav>
    <hr />
    <div class="content">
      <%= simple_format(@post.content, style: 'text-align:justify;') %>
    </div>
  </div>
</section>

<section class="section comments">
  <div class="container">
    <h2 class="subtitle is-5"><strong><%= @post.comments.count %></strong> Comments</h2>
    <%= render @post.comments %>
    <% if user_signed_in? %>
    <div class="comment-form">
      <hr />
      <h3 class="subtitle is-3">Leave a reply</h3>
      <%= render 'comments/form'%>
    </div>
    <% end %>
  </div>
</section>
