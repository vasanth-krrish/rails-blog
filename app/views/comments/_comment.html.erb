<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.user.username.downcase %>: </strong>
          <%= comment.comment%><br>
          <em><small><%= time_ago_in_words(comment.created_at) %> ago </small></em></p>
      </div>
    </div>
    <% if comment.user == current_user || user_signed_in? && current_user.has_role?(:admin) %>
      <%= link_to "Delete", [comment.post, comment], method: :delete, data: {confirm: "Are you sure?"}, class: "button is-danger" %>
    <% end %>
  </article>
</div>
